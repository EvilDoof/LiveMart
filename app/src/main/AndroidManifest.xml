        android:theme="@style/Theme.LiveMart"
        android:usesCleartextTraffic="true"
        tools:replace="android:theme">
        <activity android:name=".Buyers.ResetPasswordEntryActivity"></activity>
        <activity android:name=".Buyers.OtpActivity" />
        <activity android:name=".Admin.ShippedEmailActivity" />
        <activity android:name=".SearchCategoriesActivity" />
