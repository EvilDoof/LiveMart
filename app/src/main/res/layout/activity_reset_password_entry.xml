<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.ResetPasswordEntryActivity">

    <RelativeLayout
        android:id="@+id/relative1234"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#68b4fc"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/reset_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" />

    </RelativeLayout>



    <TextView
        android:id="@+id/reset_title_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#68b4fc"
        android:textStyle="bold"
        android:text="Enter the new password"
        android:gravity="center"
        android:textSize="26dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="10dp"
        />


    <EditText
        android:id="@+id/password_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/reset_title_header"
        android:textColorHint="#f47f4f"
        android:textColor="#f47f4f"
        android:inputType="textPassword"
        android:hint="Enter the new password"
        />

    <EditText
        android:id="@+id/password_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/password_1"
        android:textColorHint="#f47f4f"
        android:textColor="#f47f4f"
        android:inputType="textPassword"
        android:hint="Confirm password"
        />


    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/password_2"
        android:text="change password"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        />

</RelativeLayout>